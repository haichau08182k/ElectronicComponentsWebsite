
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(function () {
            $("#phonenumber").keypress(function (e) {
                if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                    return false;
                }
            });
        });
    });</script>
<<!-- banner -->
<div class="banner_inner">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <li>
                    <a href="index.html">Trang chủ</a>
                    <i>|</i>
                </li>
                <li>Đổi mật khẩu</li>
            </ul>
        </div>
    </div>

</div>
<!--//banner -->
<!-- top Products -->
<section class="banner-bottom-wthreelayouts py-lg-5 py-3">
    <div class="container">
        <h3 class="tittle-w3layouts text-center my-lg-4 my-4">Đổi mật khẩu</h3>
        <div class="inner_sec">

            <div class="contact_grid_right">
                @using (Html.BeginForm("ResetPassword", "Member", FormMethod.Post))
                {
                    <div class="form-group">

                        <p class="text-danger">@ViewBag.Message</p>
                    </div>
                    <div class="form-group">

                        <input type="password" name="CurrentPassword" class="form-control" placeholder="Mật khẩu hiện tại..." required>
                    </div>
                    <div class="form-group">

                        <input type="password" id="Password" name="NewPassword" class="form-control" placeholder="Mật khẩu mới..." pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                    </div>
                    <div class="form-group">

                        <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Nhập lại mật Khẩu mới..." pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Nhập lại mật khẩu chưa trùng khớp!' : '');">
                    </div>
                    <div class="form-group">

                        <input type="submit" class="form-control" id="btnSignIn" name="Sign In" value="Xác Nhận">
                        </div>
                        }
                    </div>
                </div>
    </div>
</section>
