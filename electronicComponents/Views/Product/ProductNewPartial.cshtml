@model electronicComponents.DAL.Product
<div class="col-md-3 product-men women_two">
    <div class="product-googles-info googles">
        <div class="men-pro-item">
            <div class="men-thumb-item">
                <img src="@Url.Content("~/Content/images/" + Model.image1)" class="img-fluid" alt="Ảnh sản phẩm">
                <div class="men-cart-pro">
                    <div class="inner-men-cart-pro">
                        <a href="@Url.Action("Details","Product",new { ID=Model.id})" class="link-product-add-cart">Xem chi tiết</a>
                    </div>
                </div>
                <span class="product-new-top">New</span>
            </div>
            <div class="item-info-product">
                <div class="info-product-price">
                    <div class="grid_meta">
                        <div class="product_price">
                            <h4>
                                <a href="@Url.Action("Details","Product",new { ID=Model.id})">@Model.name</a>
                            </h4>
                            <div class="grid-price mt-2">
                                @if (Model.discount > 0)
                                {
                                    <p><span class="money">@Model.promotionPrice.Value.ToString("#,##")₫</span><del>@Model.price.Value.ToString("#,##")₫</del></p>

                                }
                                else
                                {
                                    <p><span class="money">@Model.price.Value.ToString("#,##")₫</span></p>

                                }
                            </div>
                        </div>
                        <ul class="stars">
                            @{
                                if (ViewBag.Rating == 5)
                                {
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                }
                                else if (ViewBag.Rating == 4)
                                {
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                }
                                else if (ViewBag.Rating == 3)
                                {
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                }
                                else if (ViewBag.Rating == 2)
                                {

                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                }
                                else if (ViewBag.Rating == 1)
                                {

                                    <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                }
                                else
                                {
                                    <li><a href="#">Chưa có đánh giá</a></li>
                                }
                            }

                        </ul>
                    </div>
                    <div class="googles single-item hvr-outline-out">
                        <button class="googles-cart pgoogles-cart AddItemInCart" data-id="@Model.id"><i class="fas fa-cart-plus"></i></button>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
