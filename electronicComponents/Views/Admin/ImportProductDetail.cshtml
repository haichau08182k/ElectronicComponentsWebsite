@model IEnumerable<electronicComponents.DAL.ImportCouponDetail>

@{
    ViewBag.Title = "ImportProductDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

!-- Template CSS -->
<link rel="stylesheet" href="~/AdminStyle/assets/css/style-starter.css">

<!-- google fonts -->
<link href="~/AdminStyle/fonts.googleapis.com/css?family=Nunito:300,400,600,700,800,900&display=swap" rel="stylesheet">
<div class="main-content">

    <!-- content -->
    <div class="container-fluid content-top-gap">

        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý</li>
                <li class="breadcrumb-item active" aria-current="page">Phiếu nhập</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- pricing -->
        <section class="pricing">

            <div class="card mb-3">
                <div class="p-3 card card_border">
                    <div class="pl-0 pt-0 card-header chart-grid__header">
                    </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>
                                                Mã Chi Tiết PN
                                            </th>
                                            <th>
                                                Tên Sản Phẩm
                                            </th>
                                            <th>
                                                Hình Ảnh
                                            </th>
                                            <th>
                                                Đơn Giá Nhập
                                            </th>
                                            <th>
                                                Số Lượng
                                            </th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                Mã Chi Tiết PN
                                            </th>
                                            <th>
                                                Tên Sản Phẩm
                                            </th>
                                            <th>
                                                Hình Ảnh
                                            </th>
                                            <th>
                                                Đơn Giá Nhập
                                            </th>
                                            <th>
                                                Số Lượng
                                            </th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="color:brown">
                                                    <b>@Html.DisplayFor(modelItem => item.id)</b>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Product.name)
                                                </td>
                                                <td>
                                                    <img src="@Url.Content("~/Content/images/" + item.Product.image1)" width="100" height="100" />
                                                </td>
                                                <td>
                                                    <span>@item.Product.price.Value.ToString("#,##")</span>
                                                </td>
                                                <td>
                                                    <span>@item.quantity</span>
                                                </td>
                                            </tr>
}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                </div>
            </div>


        </section>


    </div>
</div>
