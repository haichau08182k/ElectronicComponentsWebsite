@model electronicComponents.DAL.Supplier

@{
    ViewBag.Title = "AddSupplier";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Template CSS -->
<link rel="stylesheet" href="~/AdminStyle/assets/css/style-starter.css">

<!-- google fonts -->
<link href="~/AdminStyle/fonts.googleapis.com/css?family=Nunito:300,400,600,700,800,900&display=swap" rel="stylesheet">
<div class="main-content">

    <div class="container-fluid content-top-gap">

        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý</li>
                <li class="breadcrumb-item active" aria-current="page"><a href="../Admin/Supplier">Nhà cung cấp</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- forms -->
        <section class="forms">
            <!-- forms 1 -->
            <div class="card card_border py-2 mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("AddSupplier", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <h5 class="card-title">Tên nhà cung cấp</h5>
                                <input type="text" name="name" value="" class="form-control input-style" placeholder="Nhập tên nhà cung cấp" />
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <h5 class="card-title">Địa chỉ</h5>
                                <input type="text" name="addresss" value="" class="form-control input-style" placeholder="Nhập địa chỉ" />
                                @Html.ValidationMessageFor(model => model.addresss, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <h5 class="card-title">Số điện thoại</h5>
                                <input type="number" name="phoneNumber" value="" class="form-control input-style" placeholder="Nhập số điện thoại" />
                                @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <h5 class="card-title">Email</h5>
                                <input type="email" name="email" value="" class="form-control input-style" placeholder="Nhập Email" />
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.CheckBox("isActive")
                                @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                                <label class="input__label">Kích hoạt</label>

                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-style btn-primary mr-2" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

    </div>
    </div>