
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="main-content">

    <!-- content -->
    
        <!-- Register form -->
        <section class="pricing">
            <div class="card card_border p-md-4">
                <div class="card-body">
                    <!-- form -->
                    <form action="#" method="GET">
                        <div class="register__header text-center mb-lg-5 mb-4">
                            <h3 class="register__title mb-2"> Signup</h3>
                            <p>Create your account here, and continue </p>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName" class="input__label">Password old</label>
                            <input type="text" class="form-control login_text_field_bg input-style" id="exampleInputName" aria-describedby="emailHelp" placeholder="" required="" autofocus="">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="input__label">New password</label>
                            <input type="email" class="form-control login_text_field_bg input-style" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" class="input__label">Re-Enter password</label>
                            <input type="password" class="form-control login_text_field_bg input-style" id="exampleInputPassword1" placeholder="" required="">
                        </div>
                      
                        <div class="d-flex align-items-center flex-wrap justify-content-between">
                            <button type="submit" class="btn btn-primary btn-style mt-4">Submit</button>
                            <p class="signup mt-4">
                                Already have an account? <a href="login.html" class="signuplink">Login </a>
                            </p>
                        </div>
                    </form>
                    <!-- //form -->
                    <p class="backtohome mt-4"><a href="index.html" class="back"><i class="fa fa-chevron-left" aria-hidden="true"></i>Back to Home </a></p>
                </div>
            </div>
        </section>

   
    <!-- //content -->

</section>
