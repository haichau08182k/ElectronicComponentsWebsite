
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}
<script src="~/Content/js/jquery-2.2.3.min.js"></script>
<script>
    $(document).ready(function () {
        $("#pass1").keyup(function () {
            if ($("#pass1").val() != $("#pass2").val()) {
                $("#message").html("Password do not match").css("color", "red");
            } else {
                $("#message").html("Password matched").css("color", "green");
            }
        });
        $("#pass2").keyup(function () {
            if ($("#pass2").val() != $("#pass1").val()) {
                $("#message").html("Password do not match").css("color", "red");
            } else {
                $("#message").html("Password matched").css("color", "green");
            }
        });
    });
</script>
<link href="~/Content/css/contact.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/Content/css/style6.css" rel="stylesheet" />
<!-- banner -->
<div class="banner_inner">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <li>
                    <a href="index.html">Trang chủ</a>
                    <i>|</i>
                </li>
                <li>Đăng kí</li>
            </ul>
        </div>
    </div>

</div>
<!--//banner -->
<!-- top Products -->
<section class="banner-bottom-wthreelayouts py-lg-5 py-3">
    <div class="container">
        <h3 class="tittle-w3layouts text-center my-lg-4 my-4">Đăng kí tài khoản</h3>
        <div class="inner_sec">
            <p class="sub text-center mb-lg-5 mb-3">Đăng kí để nhận thêm nhiều ưu đãi</p>

            <div class="contact_grid_right">
                <form action="#" method="post">
                    <div class="row contact_left_grid">
                        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                        {
                            <div class="col-md-6 con-left">

                                <div class="form-group">
                                    <label>Tên tài khoản</label>
                                    <input class="form-control" type="text" name="userName" placeholder="" required="">
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input class="form-control" type="password" name="passwordd" placeholder="" required="" id="pass1">
                                  
                                </div>
                                <div class="form-group">
                                    <label>Xác nhận mật khẩu</label>
                                    <input class="form-control" type="password" name="confirmPass" placeholder="" required="" id="pass2">
                                    <p id="message"></p>
                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input class="form-control" type="number" name="phoneNumber" placeholder="" required="">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="email" name="email" placeholder="" required="">
                                </div>


                            </div>
                            <div class="col-md-6 con-right">
                                <div class="form-group">
                                    <label class="my-2">Họ tên</label>
                                    <input class="form-control" type="text" name="fullName" placeholder="" required="">
                                </div>


                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <textarea id="textarea" placeholder="" required="" name="addresss"></textarea>
                                </div>
                                <input class="form-control" style="font-size:large" type="submit" value="Đăng kí">

                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
